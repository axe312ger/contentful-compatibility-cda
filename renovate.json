{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": [
    "main"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "gatsby",
        "gatsby-*"
      ],
      "groupName": "gatsby ecosystem"
    },
    {
      "matchPackageNames": [
        "@angular/*",
        "rxjs",
        "zone.js"
      ],
      "groupName": "angular ecosystem"
    },
    {
      "matchPackageNames": [
        "react",
        "react-dom",
        "react-native",
        "expo",
        "@react-native-*",
        "@expo/*"
      ],
      "matchFileNames": ["environments/react-native-expo/**"],
      "groupName": "react native ecosystem"
    },
    {
      "matchPackageNames": [
        "vite",
        "vite-plugin-*",
        "@vitejs/*"
      ],
      "groupName": "vite ecosystem"
    },
    {
      "matchPackageNames": [
        "next",
        "next-*"
      ],
      "groupName": "next.js ecosystem"
    },
    {
      "matchPackageNames": [
        "nuxt",
        "nuxt-*"
      ],
      "matchFileNames": ["environments/react-native-expo/**"],
      "groupName": "nuxt ecosystem"
    },
    {
      "matchPackageNames": [
        "svelte",
        "svelte-*"
      ],
      "groupName": "svelte ecosystem"
    },
    {
      "matchPackageNames": [
        "rollup",
        "rollup-plugin-*",
        "@rollup/*"
      ],
      "matchFileNames": ["environments/rollup/**"],
      "groupName": "rollup ecosystem"
    },
    {
      "matchPackageNames": [
        "webpack",
        "webpack-*",
        "@webpack/*"
      ],
      "matchFileNames": ["environments/webpack/**"],
      "groupName": "webpack ecosystem"
    },
    {
      "matchPackageNames": [
        "typescript",
        "@types/*"
      ],
      "groupName": "typescript updates"
    }
  ],
  "separateMinorPatch": true,
  "dependencyDashboard": true,
  "prHourlyLimit": 4,
  "prConcurrentLimit": 420
}
