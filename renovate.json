{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "baseBranches": ["main"],
  "packageRules": [
    {
      "matchFileNames": ["angular/**"],
      "groupName": "angular environment"
    },
    {
      "matchFileNames": ["gatsbyjs/**"],
      "groupName": "gatsby environment"
    },
    {
      "matchFileNames": ["nextjs/**", "nextjs-ts/**"],
      "groupName": "next.js environments"
    },
    {
      "matchFileNames": ["nuxt/**"],
      "groupName": "nuxt environment"
    },
    {
      "matchFileNames": ["react-native-expo/**"],
      "groupName": "react native expo environment"
    },
    {
      "matchFileNames": ["rollup/**"],
      "groupName": "rollup environment"
    },
    {
      "matchFileNames": ["svelte/**"],
      "groupName": "svelte environment"
    },
    {
      "matchFileNames": ["vite/**", "vite-ts/**"],
      "groupName": "vite environments"
    },
    {
      "matchFileNames": ["webpack/**"],
      "groupName": "webpack environment"
    },
    {
      "matchFileNames": ["node-cjs/**", "node-mjs/**"],
      "groupName": "node environments"
    },
    {
      "matchFileNames": ["node-ts-cjs/**", "node-ts-mjs/**"],
      "groupName": "node TS environments"
    },
    {
      "matchFileNames": ["browser-1/**", "browser-2/**", "browser-3/**"],
      "groupName": "browser environments"
    }
  ],
  "separateMinorPatch": true,
  "dependencyDashboard": true,
  "prHourlyLimit": 4,
  "prConcurrentLimit": 420
}
